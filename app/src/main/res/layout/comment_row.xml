<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintlayout"
            android:layout_width="match_parent"

            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/user_image_com"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"

                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/user_image"
                android:layout_margin="@dimen/_5sdp"/>

            <TextView
                android:id="@+id/username_com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:layout_marginStart="16dp"
                android:text="Username"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/user_image_com"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.129" />

            <TextView
                android:id="@+id/text_view_com_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15/5/2022 10:19:02 PM"
                app:layout_constraintTop_toBottomOf="@id/username_com"
                app:layout_constraintStart_toEndOf="@id/user_image_com"

                android:layout_marginHorizontal="@dimen/_5sdp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_view_com_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sometimes it pays to stay in bed on Monday, rather than spending the rest of the week debugging Mondayâ€™s code"
            android:layout_marginTop="@dimen/_5sdp"
            android:outlineAmbientShadowColor="@color/black"
            android:padding="@dimen/_5sdp"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:background="#E3E0E0"
            android:textColor="#373535"/>





    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>